@using CipherScore.ApiService.Services
@inject PasswordStrengthService PasswordService

<div class="mt-4">
    <h6>Password Details</h6>
    <div class="row g-3">
        <div class="col-6 col-md-3">
            <div class="text-center p-2 bg-light rounded">
                <div class="fw-bold text-primary">@password.Length</div>
                <small class="text-muted">Characters</small>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="text-center p-2 bg-light rounded">
                <div class="fw-bold text-info">@PasswordService.GetUniqueCharCount(password)</div>
                <small class="text-muted">Unique Chars</small>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="text-center p-2 bg-light rounded">
                <div class="fw-bold text-success">@PasswordService.GetCharacterTypes(password)</div>
                <small class="text-muted">Char Types</small>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="text-center p-2 bg-light rounded">
                <div class="fw-bold text-secondary">@PasswordService.GetEntropyScore(password)</div>
                <small class="text-muted">Entropy</small>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string password { get; set; } = "";
}
