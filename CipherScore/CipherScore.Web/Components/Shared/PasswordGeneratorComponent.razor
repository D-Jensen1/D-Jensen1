@inject CipherApiClient ApiClient

<div class="mb-4">
    <button class="btn btn-outline-primary w-100" @onclick="ToggleGenerator">
        <i class="bi bi-key me-2"></i>
        @(IsExpanded ? "Hide" : "Generate Secure") Password
        <i class="bi @(IsExpanded ? "bi-chevron-up" : "bi-chevron-down") ms-2"></i>
    </button>

    @if (IsExpanded)
    {
        <div class="card mt-3 border-primary">
            <div class="card-body">
                <h6 class="card-title">
                    <i class="bi bi-gear me-2"></i>Password Generator Options
                </h6>
                
                <!-- Generation Mode Selection -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Generation Mode:</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="generationMode" id="modePassword" 
                               checked="@(!GeneratePassphrase)" @onchange="() => SetGenerationMode(false)">
                        <label class="form-check-label" for="modePassword">
                            <i class="bi bi-shield-lock me-1"></i>Standard Password
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="generationMode" id="modePassphrase" 
                               checked="@GeneratePassphrase" @onchange="() => SetGenerationMode(true)">
                        <label class="form-check-label" for="modePassphrase">
                            <i class="bi bi-chat-quote me-1"></i>Passphrase (Memorable Words)
                        </label>
                    </div>
                </div>

                <hr />

                @if (!GeneratePassphrase)
                {
                    <!-- Standard Password Options -->
                    <div class="mb-3">
                        <label class="form-label">Length: @PasswordLength</label>
                        <input type="range" class="form-range" min="8" max="32" @bind="PasswordLength" @bind:event="oninput" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Character Types:</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" @bind="IncludeUppercase" id="includeUpper">
                            <label class="form-check-label" for="includeUpper">Include Uppercase Letters (A-Z)</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" @bind="IncludeLowercase" id="includeLower">
                            <label class="form-check-label" for="includeLower">Include Lowercase Letters (a-z)</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" @bind="IncludeNumbers" id="includeNumbers">
                            <label class="form-check-label" for="includeNumbers">Include Numbers (0-9)</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" @bind="IncludeSpecialChars" id="includeSpecial">
                            <label class="form-check-label" for="includeSpecial">Include Special Characters (!@@#$%)</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" @bind="ExcludeSimilarChars" id="excludeSimilar">
                            <label class="form-check-label" for="excludeSimilar">Exclude Similar Characters (i, l, 1, L, o, 0, O)</label>
                        </div>
                    </div>
                }
                else
                {
                    <!-- Passphrase Options -->
                    <div class="mb-3">
                        <label class="form-label">Number of Words: @PassphraseWordCount</label>
                        <input type="range" class="form-range" min="3" max="8" @bind="PassphraseWordCount" @bind:event="oninput" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Passphrase Options:</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" @bind="PassphraseCapitalizeWords" id="passphraseCapitalize">
                            <label class="form-check-label" for="passphraseCapitalize">Capitalize First Letter of Each Word</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" @bind="PassphraseIncludeNumbers" id="passphraseNumbers">
                            <label class="form-check-label" for="passphraseNumbers">Include Numbers</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Word Separator:</label>
                        <select class="form-select" @bind="PassphraseSeparator">
                            <option value="-">Hyphen (-)</option>
                            <option value="_">Underscore (_)</option>
                            <option value=".">Period (.)</option>
                            <option value=" ">Space</option>
                            <option value="R">Mixed</option>
                            <option value="">No Separator</option>
                        </select>
                    </div>
                }

                <button class="btn btn-success w-100" @onclick="GeneratePasswordAsync" disabled="@IsGenerating">
                    @if (IsGenerating)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                    }
                    <i class="bi bi-arrow-repeat me-2"></i>Generate @(GeneratePassphrase ? "Passphrase" : "Password")
                </button>

                @if (GeneratedPassword != null)
                {
                    <div class="mt-3 p-3 bg-light rounded">
                        <h6>Generated @(GeneratePassphrase ? "Passphrase" : "Password"):</h6>
                        <div class="input-group mb-2">
                            <input type="text" class="form-control font-monospace" value="@GeneratedPassword.Password" readonly />
                            <button class="btn btn-outline-secondary" title="Copy to clipboard" disabled>
                                <i class="bi bi-clipboard"></i>
                            </button>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <small class="text-muted">Estimated Strength: @GeneratedPassword.EstimatedStrength/100</small>
                            <button class="btn btn-sm btn-primary" @onclick="OnUsePassword">
                                <i class="bi bi-arrow-up me-1"></i>Use This @(GeneratePassphrase ? "Passphrase" : "Password")
                            </button>
                        </div>
                        @if (GeneratedPassword.UsedCriteria.Any())
                        {
                            <small class="text-muted">
                                <i class="bi bi-info-circle me-1"></i>
                                Includes: @string.Join(", ", GeneratedPassword.UsedCriteria)
                            </small>
                        }
                        @if (!string.IsNullOrEmpty(GeneratedPassword.SecurityTip))
                        {
                            <div class="alert alert-info mt-2 mb-0 py-2">
                                <small><i class="bi bi-lightbulb me-1"></i>@GeneratedPassword.SecurityTip</small>
                            </div>
                        }
                    </div>
                }

                @if (!string.IsNullOrEmpty(ErrorMessage))
                {
                    <div class="alert alert-danger mt-3 mb-0">
                        <i class="bi bi-exclamation-circle me-2"></i>@ErrorMessage
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public EventCallback<string> OnPasswordGenerated { get; set; }

    [Parameter]
    public bool IsExpanded { get; set; } = false;

    [Parameter]
    public EventCallback<bool> IsExpandedChanged { get; set; }

    // Generation mode
    private bool GeneratePassphrase { get; set; } = false;

    // Standard password settings
    private int PasswordLength { get; set; } = 16;
    private bool IncludeUppercase { get; set; } = true;
    private bool IncludeLowercase { get; set; } = true;
    private bool IncludeNumbers { get; set; } = true;
    private bool IncludeSpecialChars { get; set; } = true;
    private bool ExcludeSimilarChars { get; set; } = true;

    // Passphrase settings
    private int PassphraseWordCount { get; set; } = 4;
    private bool PassphraseIncludeNumbers { get; set; } = false;
    private bool PassphraseCapitalizeWords { get; set; } = true;
    private string PassphraseSeparator { get; set; } = "-";

    // State
    private bool IsGenerating { get; set; } = false;
    private PasswordSuggestion? GeneratedPassword { get; set; }
    private string ErrorMessage { get; set; } = "";

    private void SetGenerationMode(bool isPassphrase)
    {
        GeneratePassphrase = isPassphrase;
        GeneratedPassword = null;
        ErrorMessage = "";
    }

    private async Task ToggleGenerator()
    {
        IsExpanded = !IsExpanded;
        await IsExpandedChanged.InvokeAsync(IsExpanded);
    }

    private async Task GeneratePasswordAsync()
    {
        try
        {
            IsGenerating = true;
            ErrorMessage = "";
            GeneratedPassword = null;

            // Validate based on generation mode
            if (!GeneratePassphrase)
            {
                // Validate standard password options
                if (!IncludeUppercase && !IncludeLowercase && !IncludeNumbers && !IncludeSpecialChars)
                {
                    ErrorMessage = "Please select at least one character type";
                    return;
                }
            }

            var options = new PasswordGenerationOptions(
                Length: PasswordLength,
                IncludeUppercase: IncludeUppercase,
                IncludeLowercase: IncludeLowercase,
                IncludeNumbers: IncludeNumbers,
                IncludeSpecialChars: IncludeSpecialChars,
                ExcludeSimilarChars: ExcludeSimilarChars,
                GeneratePassphrase: GeneratePassphrase,
                PassphraseWordCount: PassphraseWordCount,
                PassphraseIncludeNumbers: PassphraseIncludeNumbers,
                PassphraseCapitalizeWords: PassphraseCapitalizeWords,
                PassphraseSeparator: PassphraseSeparator
            );

            GeneratedPassword = await ApiClient.GeneratePasswordSuggestionAsync(options);
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error generating {(GeneratePassphrase ? "passphrase" : "password")}: {ex.Message}";
        }
        finally
        {
            IsGenerating = false;
        }
    }

    private async Task OnUsePassword()
    {
        if (GeneratedPassword != null)
        {
            await OnPasswordGenerated.InvokeAsync(GeneratedPassword.Password);
        }
    }

    public void Clear()
    {
        GeneratedPassword = null;
        ErrorMessage = "";
    }
}
