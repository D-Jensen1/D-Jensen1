<Window x:Class="WPFSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Hello World" Grid.Column="1"></TextBlock>
        <Calendar Grid.Column="2"></Calendar>
        <DockPanel Grid.Column="1">
            <TextBox DockPanel.Dock="Right" Text="IamTextBox"></TextBox>
        </DockPanel>
        <StackPanel Grid.Column="0">
            <Label Name ="lblItem" Content="ItemLabel"></Label>
            <Button Name="btnTest" Click="btnTest_Click">Test Button</Button>
            
        </StackPanel>
        
    </Grid>
</Window>
